        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0">
            <TextBlock TextWrapping="Wrap" TextAlignment="Left" Width="500">
                Veuillez remplir les champs ci-dessous afin de vous inscrire à FPSDesigner.
            </TextBlock>
        </StackPanel>

        <!-- Labels -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom d'utilisateur :" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="0" Grid.Column="2" x:Name="userIdBox" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mot de passe :" HorizontalAlignment="Right"/>
            <PasswordBox Grid.Row="1" Grid.Column="2" x:Name="passwordBox" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Mot de passe (Vérification) :" HorizontalAlignment="Right"/>
            <PasswordBox Grid.Row="2" Grid.Column="2" x:Name="passwordBox2" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresse E-Mail :" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="3" Grid.Column="2" x:Name="emailAddress" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Prénom :" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="4" Grid.Column="2" x:Name="firstname" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Nom :" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="5" Grid.Column="2" x:Name="name" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Date de naissance :" HorizontalAlignment="Right"/>
            <DatePicker Grid.Row="6" Grid.Column="2" x:Name="birthday" Margin="0,0,0,10" SelectedDateFormat="Long" FirstDayOfWeek="Monday" />
            <!-- Boxes -->
            
            
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" MaxHeight="40" VerticalAlignment="Bottom">
            <StackPanel.Resources>
                <Style TargetType="mui:ModernButton">
                    <Setter Property="Margin" Value="0,0,8,0" />
                    <Setter Property="BorderThickness" Value="2" />
                </Style>
            </StackPanel.Resources>
            <TextBlock x:Name="textLoginIncorrect" VerticalAlignment="Center" Margin="0,0,10,0">Identifiants incorrects !</TextBlock>
